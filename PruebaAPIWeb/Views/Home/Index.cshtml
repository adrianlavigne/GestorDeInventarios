@model List<WebApiGestorInventario.Models.Producto>
@{
    ViewBag.Title = "Gestión de Inventario";
}

<div class="jumbotron">
    <h1>Lista de Productos</h1>
    <p class="lead">Productos consultados a través de la API.</p>
    <p>@Html.ActionLink("Nuevo Producto", "NuevoProducto", null, new { @class = "btn btn-primary" })</p>
</div>

<div class="row">
    <table class="table striped responsive-table">
        <thead>
            <tr>
                <th>Número</th>
                <th>Nombre Producto</th>
                <th>Tipo</th>
                <th class="text-center">Fecha de Caducidad</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        @{foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Tipo</td>
                    <td class="text-center">@item.FechaCaducidad.ToShortDateString()</td>
                    <td class="text-center">@Html.ActionLink("Sacar Producto", "SacarProducto", new { nombre = item.Nombre }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        }
    </table>
</div>