@model WebApiGestorInventario.Models.Producto
@{
    ViewBag.Title = "NuevoProducto";
}

@using (Html.BeginForm("NuevoProducto", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="jumbotron">
        <h1>Nuevo Producto</h1>
        <p class="lead">Nuevo producto para el inventario.</p>
    </div>
    <div class="well col-xs-12">
        <div class="form-group">
            <div class="col-xs-4">
                @Html.LabelFor(m => m.Id)
            </div>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Id)
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-4">
                @Html.LabelFor(m => m.Nombre)
            </div>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nombre)
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-4">
                @Html.LabelFor(m => m.Tipo)
            </div>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.Tipo, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Tipo)
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-4">
                @Html.LabelFor(m => m.FechaCaducidad)
            </div>
            <div class="col-xs-8">
                @Html.EditorFor(m => m.FechaCaducidad, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FechaCaducidad)
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn" />
    </div>
}

